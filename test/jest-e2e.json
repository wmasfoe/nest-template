{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../apps/server/$1",
    "^@packages/core/(.*)$": "<rootDir>/../packages/core/$1",
    "^@packages/shared/(.*)$": "<rootDir>/../packages/shared/$1"
  }
}
